{
  "openapi": "3.0.1",
  "info": {
    "title": "CartonCaps.Api | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/Referrals/InviteFriends": {
      "get": {
        "tags": [
          "Referrals"
        ],
        "summary": "Get Invite Friends",
        "description": "Retrieves data for the invite friends page, including referral code and messages.",
        "operationId": "GetInviteFriends",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/InviteFriendsModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InviteFriendsModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/InviteFriendsModel"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "default": {
            "description": "",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": [ ]
          }
        ]
      }
    },
    "/Referrals/Register": {
      "get": {
        "tags": [
          "Referrals"
        ],
        "summary": "Get Registration",
        "description": "Registration endpoint w/ referral code to attach to referrer.",
        "operationId": "GetRegistration",
        "parameters": [
          {
            "name": "referral_code",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/GetRegistration"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetRegistration"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetRegistration"
                }
              }
            }
          }
        }
      }
    },
    "/Referrals/CreateReferral": {
      "post": {
        "tags": [
          "Referrals"
        ],
        "summary": "Create Referral",
        "description": "Create a referral for user.",
        "operationId": "CreateReferral",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateReferralDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateReferralDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateReferralDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "default": {
            "description": "",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": [ ]
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "CreateReferralDTO": {
        "required": [
          "referralCode"
        ],
        "type": "object",
        "properties": {
          "referralCode": {
            "pattern": "^[A-Za-z0-9]{6}$",
            "type": "string",
            "description": "The referral code",
            "nullable": true
          }
        }
      },
      "EmailMessage": {
        "type": "object",
        "properties": {
          "subject": {
            "maxLength": 50,
            "type": "string",
            "description": "The email subject"
          },
          "body": {
            "maxLength": 500,
            "type": "string",
            "description": "The email body"
          }
        },
        "description": "Email message contents for sharing the deep link."
      },
      "GetRegistration": {
        "required": [
          "referralCode"
        ],
        "type": "object",
        "properties": {
          "referralCode": {
            "maxLength": 6,
            "pattern": "^[a-zA-Z0-9]{6}$",
            "type": "string",
            "description": "The referral code passed to the endpoint as part of registration",
            "nullable": true
          },
          "showInvitationBanner": {
            "type": "boolean"
          }
        }
      },
      "InviteFriendsModel": {
        "required": [
          "referralCode"
        ],
        "type": "object",
        "properties": {
          "description": {
            "maxLength": 100,
            "type": "string",
            "description": "The description of the invite friends page"
          },
          "referralCode": {
            "maxLength": 6,
            "type": "string",
            "description": "Referral code used to refer friends to the application."
          },
          "emailMessage": {
            "$ref": "#/components/schemas/EmailMessage"
          },
          "smsMessage": {
            "$ref": "#/components/schemas/SmsMessage"
          },
          "referrals": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ReferralDTO"
            },
            "description": "List of users referred by the current user."
          }
        }
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "ReferralDTO": {
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "type": "string",
            "description": "The referred users name"
          },
          "status": {
            "$ref": "#/components/schemas/ReferralStatus"
          }
        }
      },
      "ReferralStatus": {
        "enum": [
          "Complete"
        ],
        "description": "The status of the referral (i.e. Completed, Pending)"
      },
      "SmsMessage": {
        "type": "object",
        "properties": {
          "message": {
            "maxLength": 500,
            "type": "string",
            "description": "The sms message body"
          }
        },
        "description": "Sms message contents for sharing the deep link."
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "Bearer"
      }
    }
  },
  "tags": [
    {
      "name": "Referrals"
    }
  ]
}